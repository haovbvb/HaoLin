    }
        /**
         *  获取总的价格
         */
//    serv1view.totalPrice.text = [NSString stringWithFormat:@"￥%@",object.should_price];
        serv1view.totalPrice.text = [NSString stringWithFormat:@"面议"];
    serv1view.serveFeiL.text = [NSString stringWithFormat:@"￥%@",object.server_price];
    [cell.contentView addSubview:serv1view];
