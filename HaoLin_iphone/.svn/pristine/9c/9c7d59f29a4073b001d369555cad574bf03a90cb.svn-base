                cell.contentLabel.frame = CGRectMake(20, 40, 280, 35);
                cell.contentLabel.text = @"抱歉，商家暂无介绍";
            }
        }
        
        return cell;
    }else if(indexPath.section == 1 ||indexPath.section == 2 || indexPath.section == 5)
    {
        static NSString *indentifiew = @"used";
